# AIA System Production Configuration
# =====================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=8
MAX_CONNECTIONS=1000
TIMEOUT=60

# Database Configuration (will be replaced by deployment script)
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/aia_production
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/aia_production
NEO4J_URL=bolt://localhost:7687

# Security Configuration
SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-me-in-production
ENCRYPTION_KEY=change-me-in-production
ALLOWED_HOSTS=*
CORS_ORIGINS=https://app.aia.com,https://admin.aia.com,https://api.aia.com

# LLM Provider Configuration
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-key-here
GROQ_API_KEY=your-groq-key-here

# Multi-Agent System Configuration
POPULATION_SIZE=10
LEARNING_RATE=0.01
EPSILON=0.15
BETA=0.2
MUTATION_RATE=0.05

# Agent Factory Configuration
MAX_AGENTS=100
AGENT_REGISTRY_SIZE=1000
A2A_PROTOCOL_VERSION=2.0

# 3D Interface Configuration
THREEJS_ENABLED=true
WEBGL_ENABLED=true
PHYSICS_ENGINE=cannon
PARTICLE_COUNT=10000

# Economic System Configuration
INITIAL_SUPPLY=1000000
TREASURY_ALLOCATION=0.3
REWARD_POOL_SIZE=100000

# Monitoring and Observability
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true
GRAFANA_ENABLED=true

# Feature Flags
FEATURE_QUANTUM_READY=true
FEATURE_AUTONOMOUS_AGENTS=true
FEATURE_3D_INTERFACE=true
FEATURE_ENTERPRISE_INTEGRATIONS=true
