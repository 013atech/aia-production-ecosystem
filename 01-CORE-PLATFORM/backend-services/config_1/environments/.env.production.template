# AIA System Production Environment Configuration
# ================================================

# Core System Configuration
NODE_ENV=production
PYTHON_ENV=production
LOG_LEVEL=info
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://aia_prod_user:${DB_PASSWORD}@${DB_HOST}:5432/aia_production
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0
NEO4J_URI=neo4j://${NEO4J_HOST}:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=${NEO4J_PASSWORD}

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=${GCP_PROJECT_ID}
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-service-account.json
GCS_BUCKET=${GCP_PROJECT_ID}-aia-storage
GCP_REGION=us-central1

# Domain and DNS Configuration
PRIMARY_DOMAIN=013a.tech
API_DOMAIN=api.013a.tech
FRONTEND_DOMAIN=app.013a.tech
ADMIN_DOMAIN=admin.013a.tech

# Security Configuration - CRITICAL: Must use strong, unique values in production
JWT_SECRET_KEY=${JWT_SECRET}  # Minimum 64 characters, cryptographically secure
API_KEY_SECRET=${API_KEY_SECRET}  # Minimum 64 characters, cryptographically secure
ENCRYPTION_KEY=${ENCRYPTION_KEY}  # Minimum 32 characters, cryptographically secure
SESSION_SECRET=${SESSION_SECRET}  # Minimum 64 characters, cryptographically secure

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRES_HOURS=1
EMAIL_VERIFICATION_REQUIRED=true

# LLM Provider API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_API_KEY=${GOOGLE_API_KEY}
GROQ_API_KEY=${GROQ_API_KEY}
XAI_API_KEY=${XAI_API_KEY}
HUGGINGFACE_API_TOKEN=${HF_API_KEY}

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=${STRIPE_API_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Email Configuration (GCP)
SENDGRID_API_KEY=${SENDGRID_API_KEY}
EMAIL_FROM_ADDRESS=hello@013a.tech
EMAIL_FROM_NAME=AIA System

# Monitoring and Analytics
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=${SENTRY_DSN}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_SOCIOECONOMIC_MODEL=true
ENABLE_VENTURE_ANALYSIS=true
ENABLE_EMAIL_WORKFLOWS=true
ENABLE_CRYPTO_PRODUCTION=true
MOCK_EXTERNAL_APIS=false

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
MAX_CONNECTIONS=1000
POOL_SIZE=20

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_API_TOKEN}
CLOUDFLARE_ZONE_ID=${CLOUDFLARE_ZONE_ID}

# GitHub Configuration
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_WEBHOOK_SECRET=${GITHUB_WEBHOOK_SECRET}

# Additional Production Settings
CORS_ORIGINS=https://013a.tech,https://app.013a.tech,https://admin.013a.tech
ALLOWED_HOSTS=013a.tech,api.013a.tech,app.013a.tech,admin.013a.tech
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000